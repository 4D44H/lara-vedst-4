{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "es6"
    ],
    "module": "es6",
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "types": [
      "jquery",
      "bootstrap",
      "bootstrap-select",
      "bootbox",
      "sortablejs",
      "es6-promise",
      "isotope-layout",
      "moment"
    ]
  },
  "exclude": [
    "node_modules",
    "vendor"
  ]
}
